pipeline {
    agent any
    environment{
        PATH = "/opt/maven3.8/bin:$PATH"
    }
    stages {
        stage('git') {
            steps {
                git branch: 'main', url: 'https://github.com/udayjy/hello-world.git'
            }
        }
        stage('code build') {
            steps {
                sh "mvn clean install package"
            }
        }
     }
}
