pipeline {
    agent any
    environment{
        PATH = "/opt/maven3.8/bin:$PATH"
    }
    stages {
        stage('git') {
            steps {
                git branch: 'main', url: 'https://github.com/udayjy/web-sample.git'
            }
        }
        stage('code build') {
            steps {
                sh "mvn clean install package"
            }
        }
        stage("build & SonarQube analysis") {
            agent any
            steps {
              withSonarQubeEnv('sonar369') {
                sh 'mvn clean package sonar:sonar'
              }
            }
          }
     }
}
